{
  "name": "front-glue",
  "version": "0.0.1",
  "description": "front-glue",
  "author": "Bartosz V. Bentkowski <me@bartoszbentkowski.com>",
  "license": "MIT",
  "main": "Ready to use Front-End boilerplate based on ES6 and PostCSS (and Webpack)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vforge/front-glue.git"
  },
  "keywords": [
    "build tool",
    "frontend",
    "es6",
    "prostcss",
    "webpack"
  ],
  "bugs": {
    "url": "https://github.com/vforge/front-glue/issues"
  },
  "scripts": {
    "linter": "eslint .",
    "build.dev": "webpack --progress --colors --hide-modules",
    "build.prod": "webpack --progress --colors --verbose -p",
    "watch.dev": "nodemon  --ext js,scss,css --ignore 'build/*' --exec 'node ./node_modules/.bin/webpack --progress --colors --hide-modules'",
    "watch.prod": "nodemon --ext js,scss,css --ignore 'build/*' --exec 'node ./node_modules/.bin/webpack --progress --colors --verbose -p'"
  },
  "dependencies": {
    "autoprefixer": "^6.6.1",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.5",
    "file-loader": "^0.9.0",
    "handlebars": "^4.0.6",
    "handlebars-loader": "^1.4.0",
    "jquery": "^3.1.1",
    "modules": "^0.4.0",
    "node-sass": "^3.10.1",
    "normalize.css": "^5.0.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-loader": "^1.0.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "webpack-notifier": "^1.5.0"
  },
  "homepage": "https://github.com/vforge/front-glue#readme",
  "directories": {
    "doc": "docs"
  }
}
